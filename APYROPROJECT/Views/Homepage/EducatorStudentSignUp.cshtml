@{
    Layout = "/Views/Shared/_layoutforhomepage2.cshtml";
}



<div class="col-md-5">
    <div class="widget p-5" style="background-color:#fff">
        <div class="d-flex align-items-center justify-content-center">
            <img src="~/EDUCATORSTUDENTBACKGROUND.png" alt="Image description" id="logo-image" />
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-md-auto">
                <a class="btn btn-primary" style="background-color: #fff; color: black; font-weight: bold; width: 250px;"
