@{

    ViewData["isHomepage"] = "true";
    Layout = "/Views/Shared/_layoutforhomepage.cshtml";
}






<div class="row mb-4 justify-content-center">
    <div class="col-md-8">
        <div class="widget p-5" style="background-color:#fff">
            
                <!-- Your image goes here -->
                <div class="d-flex align-items-center justify-content-center" >
                    <img src="~/HomepageAnimation.png" alt="Image description" id="logo-image" />
                </div>
                <div class="p-4">
                    <h5 class="fw-bold" style="color: black; text-align: center; font-size: 34px; margin-top: 20px;">APyro</h5>
                    <p style="text-align: center; font-size: 18px; color: black; margin-top: 10px;">
                        <span style="font-weight: bold;">A smart attendance management system</span> for Higher Education.
                    </p>

                    <div class="row justify-content-center">
                        <div class="col-md-auto mt-3">
                        <a class="btn btn-success" style="background-color: #16BDB3; color: black; font-weight: bold; width: 100px;"
                           href="@Url.Action("GroupRecognition", "Homepage")">Log In</a>
                        </div>
                        <div class="col-md-auto">
                            <!-- Add some space between the buttons -->
                            <div style="width: 20px;"></div>
                        </div>
                    <div class="col-md-auto mt-3">
                        <a class="btn btn-success" style="background-color: #16BDB3; color: black; font-weight: bold; width: 100px;"
                           href="@Url.Action("EducatorStudentSignUp", "Homepage")">Sign Up</a>
                    </div>


                    </div>



                </div>
            
        </div>
    </div>
</div>
